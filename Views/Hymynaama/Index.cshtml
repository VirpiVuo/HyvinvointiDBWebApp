<p></p>
<div>
	<a class="btn btn-info" href="/Hymynaama/Create">Lisää uusi mieliala</a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hymynaama1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tyontekijat.Sukunimi)
        </th>
        <th></th>
